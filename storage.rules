rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // ============================================
    // TEMPORARY RULES FOR INITIAL SETUP
    // ============================================
    // WARNING: Update these rules after setting up authentication
    
    // Public read access for website assets
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // Website assets (images, etc.)
    match /assets/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // News images - public read
    match /news/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // Campaign materials - public read
    match /campaigns/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // Event photos - public read
    match /events/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // ============================================
    // AUTHENTICATED USER AREAS (for future use)
    // ============================================
    
    // User uploads (when auth is implemented)
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Admin area (when auth is implemented)
    match /admin/{allPaths=**} {
      allow read: if request.auth != null && 
                     request.auth.token.admin == true;
      allow write: if request.auth != null && 
                      request.auth.token.admin == true;
    }
    
    // ============================================
    // DENY ALL OTHER PATHS
    // ============================================
    
    // Default: deny all
    match /{allPaths=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
